<% if(movie != null ) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- movie.name %></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
          <img src="/uploads/<%- movie.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- movie.name %>" loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h1><%- movie.name %></h1></div>
                <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- movie.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <%- movie.description %>
                    <button onclick="deleteMovie()" style="background-color:#ec0d0d;color:#f6faf6;border-radius:5px">Rent A Movie!
                </div>
            </div>
        </div>
    </div>
        
<% } %>
